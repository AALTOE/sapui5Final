<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <!--Titulo Wizard-->
    <WizardStep
        id="employeesData"
        title="{i18n>employeesData}"
        activate="validationForm"
        validated="true"
    >
        <!--DescripciÃ³n Wizard-->
        <MessageStrip
            class="sapUiSmallMarginBottom"
            text="{i18n>employeesDataDesc}"
            showIcon="true"
        />
        <!--Formulario Wizard-->
        <form:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout"
        >
            <!--Nombre-->
            <Label
                text="{i18n>nameInput}"
                required="true"
            />
            <Input
                id="iname"
                type="Text"
                liveChange="validationForm"
                placeholder="{i18n>placeHolderName}"
                valueState="{objTypeEmployee>/SATENAME}"
                valueStateText="{i18n>valueStateName}"
            />
            <!--Apellidos-->
            <Label
                text="{i18n>lastNameInput}"
                required="true"
            />
            <Input
                id="ilastname"
                type="Text"
                liveChange="validationForm"
                placeholder="{i18n>placeHolderLasteName}"
                valueState="{objTypeEmployee>/SATELASTNAME}"
                valueStateText="{i18n>valueStateLastName}"
            />
            <!--CIF-->
            <Label
                text="{i18n>cifInput}"
                required="true"
                visible="{objTypeEmployee>/INPUTCFI}"
            />
            <Input
                id="icif"
                liveChange="validationForm"
                placeholder="{i18n>placeholderCIF}"
                visible="{objTypeEmployee>/INPUTCFI}"
                valueState="{objTypeEmployee>/SATECIF}"
                valueStateText="{i18n>valueStateCIF}"
            />
            <!--DNI-->
            <Label
                text="{i18n>DNInput}"
                required="true"
                visible="{objTypeEmployee>/INPUTDNI}"
            />
            <Input
                id="idni"
                liveChange="validationForm"
                placeholder="{i18n>placeholderDNI}"
                visible="{objTypeEmployee>/INPUTDNI}"
                valueState="{objTypeEmployee>/SATEDNI}"
                valueStateText="{i18n>valueStateDNI}"
            />
            <!--Saldo bruto-->
            <Label
                text="{i18n>priceInput}"
                visible="{objTypeEmployee>/INPUTPRICE}"
            />

            <Slider
                enableTickmarks="true"
                min="{objTypeEmployee>/SLIDERMIN}"
                max="{objTypeEmployee>/SLIDERMAX}"
                step="{objTypeEmployee>/SLIDERSTEP}"
                value="{objTypeEmployee>/SLIDERVALUE}"
                class="sapUiLargeMarginBottom"
                width="100%"
                visible="{objTypeEmployee>/INPUTPRICE}"
            />

            <!--Precio diario-->
            <Label
                text="{i18n>salary}"
                visible="{objTypeEmployee>/INPUTSALARY}"
            />
            <Slider
                enableTickmarks="true"
                min="{objTypeEmployee>/SLIDERMIN}"
                max="{objTypeEmployee>/SLIDERMAX}"
                step="{objTypeEmployee>/SLIDERSTEP}"
                value="{objTypeEmployee>/SLIDERVALUE}"
                class="sapUiLargeMarginBottom"
                width="100%"
                visible="{objTypeEmployee>/INPUTSALARY}"
            />
            <!--Fecha-->
            <Label
                text="{i18n>incorDateInput}"
                required="true"
            />
            <DatePicker
                id="idate"
                change="validationForm"
                placeholder="{i18n>placerholderDate}"
                valueState="{objTypeEmployee>/SATEDATE}"
                valueStateText="{i18n>valueStateDate}"
            />
        </form:SimpleForm>
    </WizardStep>
</core:FragmentDefinition>
