<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <Page
        id="wizardReviewPage"
        showHeader="false"
    >
        <content>
            <form:SimpleForm
                title="1. {i18n>typeEmployee}"
                editable="false"
                layout="ResponsiveGridLayout"
            >
                <form:content>
                    <!--Tipo-->
                    <Label text="{i18n>type}" />
                    <!--texto del tipo-->
                    <Text text="{objTypeEmployee>/EMPLOYEETEXT}" />
                    <!--Enlace para editar el paso uno-->
                    <Link
                        press="editStepOne"
                        text="Editar"
                    />
                </form:content>
            </form:SimpleForm>

            <form:SimpleForm
                title="2. {i18n>employeesData}"
                editable="false"
                layout="ResponsiveGridLayout"
            >
                <form:content>
                    <!--Nombre-->
                    <Label text="{i18n>nameInput}" />
                    <Text text="{objTypeEmployee>/EMPLOYEENAME}" />
                    <!--Apellido-->
                    <Label text="{i18n>lastNameInput}" />
                    <Text text="{objTypeEmployee>/EMPLOYEELASTNAME}" />
                    <!--CIF-->
                    <Label
                        text="{i18n>cifInput}"
                        visible="{objTypeEmployee>/INPUTCFI}"
                    />
                    <Text
                        text="{objTypeEmployee>/EMPLOYEECIF}"
                        visible="{objTypeEmployee>/INPUTCFI}"
                    />
                    <!--DNI-->
                    <Label
                        text="{i18n>DNInput}"
                        visible="{objTypeEmployee>/INPUTDNI}"
                    />
                    <Text
                        text="{objTypeEmployee>/EMPLOYEEDNI}"
                        visible="{objTypeEmployee>/INPUTDNI}"
                    />
                    <!--Salario bruto anual-->
                    <Label
                        text="{i18n>salary}"
                        visible="{objTypeEmployee>/INPUTSALARY}"
                    />
                    <Text
                        text="{objTypeEmployee>/SLIDERVALUE}"
                        visible="{objTypeEmployee>/INPUTSALARY}"
                    />
                    <!--Precio diario-->
                    <Label
                        text="{i18n>priceInput}"
                        visible="{objTypeEmployee>/INPUTPRICE}"
                    />
                    <Text
                        text="{objTypeEmployee>/SLIDERVALUE}"
                        visible="{objTypeEmployee>/INPUTPRICE}"
                    />
                    <!--Fecha-->
                    <Label text="{i18n>incorDateInput}" />
                    <Text text="{objTypeEmployee>/EMPLOYEEDATE}" />
                    <!--Enlace para editar el paso dos-->
                    <Link
                        press="editStepTwo"
                        text="Editar"
                    />
                </form:content>
            </form:SimpleForm>

            <form:SimpleForm
                title="3. {i18n>addInfomration}"
                editable="false"
                layout="ResponsiveGridLayout"
            >
                <form:content>
                    <Label text="{i18n>inputComent}" />
                    <Text
                        text="{objTypeEmployee>/EMPLOYEECOMMENT}"
                    />
                    <Label text="{i18n>documents}" />
                    <Text text="{objTypeEmployee>/_numFiles} {i18n>ficheros}"/>
				<Label></Label>
                    <List items="{objTypeEmployee>/_files}">
					<items>
						<StandardListItem title="{objTypeEmployee>DocName}"></StandardListItem>
					</items>
				</List>
                    <!--Enlace para editar el paso tres-->
                    <Link
                        press="editStepThree"
                        text="Editar"
                    />
                </form:content>
            </form:SimpleForm>
        </content>
        <footer>
            <Bar>
                <contentRight>
                    <Button
                        text="{i18n>Savebtn}"
                        press="_CreateEmployee"
                    />
                    <Button
                        text="Cancel"
                        press="cancelProgress"
                    />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</core:FragmentDefinition>
