<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <WizardStep
        id="employeeTypeStep"
        title="{i18n>typeEmployee}"
        validated="true"
    >
        <MessageStrip
            class="sapUiSmallMarginBottom"
            text="{i18n>typeEmployeeDesc}"
            showIcon="true"
        />
        <HBox
            alignItems="Center"
            justifyContent="Center"
            width="100%"
        >
            <SegmentedButton
                width="320px"
                selectionChange="_selectEmployee"
            >
                <items>
                    <SegmentedButtonItem text="{i18n>btnInter}"/>
                    <SegmentedButtonItem text="{i18n>bntAut}"/>
                    <SegmentedButtonItem text="{i18n>btnGer}"/>
                </items>
            </SegmentedButton>
        </HBox>
    </WizardStep>
</core:FragmentDefinition>
