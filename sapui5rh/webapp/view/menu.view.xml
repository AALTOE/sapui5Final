<mvc:View
    controllerName="com.logali.sapui5rh.controller.menu"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        titleAlignment="Center"
    >
        <Panel
            expandable="true"
            expanded="true"
            headerText="{i18n>employeePanelHeader}"
            width="auto"
            class="sapUiResponsiveMargin"
        >
            <content>
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="{i18n>tileEmployeeCreate}"
                    press="toCreateEmployee"
                >
                    <TileContent>
                        <ImageContent src="sap-icon://add-employee" />
                    </TileContent>
                </GenericTile>
            </content>
            <content>
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="{i18n>tileEmployeeView}"
                    press="toViewEmployee"
                >
                    <TileContent>
                        <ImageContent src="sap-icon://employee-lookup" />
                    </TileContent>
                </GenericTile>
            </content>
        </Panel>

        <Panel
            expandable="true"
            expanded="true"
            headerText="{i18n>ordersPanelHeader}"
            width="auto"
            class="sapUiResponsiveMargin"
        >
            <content>
                <GenericTile
                    class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                    header="{i18n>tileSignature}"
                    press="toEmployeeSignature"
                >
                    <TileContent>
                        <ImageContent src="sap-icon://signature" />
                    </TileContent>
                </GenericTile>
            </content>
        </Panel>
    </Page>
</mvc:View>
